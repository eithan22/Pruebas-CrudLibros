@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="card p-4 shadow" style="width: 350px;">
        <h3 class="text-center">Iniciar Sesión</h3>
        <form action="/Acceso/Validar" method="post">
            <div class="mb-3">
                <label>Usuario</label>
                <input type="text" name="usuario" id="txtUsuario" class="form-control" placeholder="admin" />
            </div>
            <div class="mb-3">
                <label>Contraseña</label>
                <input type="password" name="password" id="txtPassword" class="form-control" placeholder="123" />
            </div>
            <button type="submit" id="btnIngresar" class="btn btn-primary w-100">Entrar</button>
        </form>
        @if (ViewBag.Error != null)
        {
            <div id="msgError" class="alert alert-danger mt-2 text-center">
                @ViewBag.Error
            </div>
        }
    </div>
</body>
</html>