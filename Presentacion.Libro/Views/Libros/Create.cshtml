@model Domian.Entidades.Libro

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear Libro</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="container mt-5" style="max-width: 500px;">

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Registrar Libro</h4>
        </div>
        <div class="card-body">
            <form action="/Libros/Create" method="post">

                <div class="mb-3">
                    <label>Título</label>
                    <input type="text" name="Titulo" id="txtTitulo" class="form-control" required />
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Titulo"]?.Errors.Count > 0)
                    {
                        <span class="text-danger">@ViewData.ModelState["Titulo"]?.Errors[0].ErrorMessage</span>
                    }
                </div>

                <div class="mb-3">
                    <label>Autor</label>
                    <input type="text" name="Autor" id="txtAutor" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>ISBN</label>
                    <input type="text" name="Isbn" id="txtIsbn" class="form-control" />
                </div>

                <button type="submit" id="btnGuardar" class="btn btn-primary w-100">Guardar Libro</button>
                <a href="/Libros/Index" class="btn btn-secondary w-100 mt-2">Cancelar</a>
            </form>
        </div>
    </div>

</body>
</html>