@model Domian.Entidades.Libro

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Libro</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light container mt-5" style="max-width: 600px;">

    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">¿Desactivar este libro?</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <p class="mb-0">Estás a punto de eliminar lógicamente el siguiente registro:</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Título:</dt>
                <dd class="col-sm-9 fw-bold">@Model.Titulo</dd>

                <dt class="col-sm-3">Autor:</dt>
                <dd class="col-sm-9">@Model.Autor</dd>

                <dt class="col-sm-3">ISBN:</dt>
                <dd class="col-sm-9">@Model.Isbn</dd>
            </dl>

            <form action="/Libros/Delete/@Model.Id" method="post">
                <button type="submit" id="btnConfirmarEliminar" class="btn btn-danger w-100">Sí, Desactivar Libro</button>
                <a href="/Libros/Index" class="btn btn-secondary w-100 mt-2">Cancelar</a>
            </form>
        </div>
    </div>

</body>
</html>