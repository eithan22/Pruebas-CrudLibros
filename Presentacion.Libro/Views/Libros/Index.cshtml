@model IEnumerable<Domian.Entidades.Libro>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Libros</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📚 Biblioteca - Administración</h2>
        <a href="/Acceso/Login" class="btn btn-outline-dark">Cerrar Sesión</a>
    </div>

    <a href="/Libros/Create" id="btnNuevoLibro" class="btn btn-success mb-3">
        + Nuevo Libro
    </a>

    <table class="table table-bordered table-striped shadow-sm" id="tablaLibros">
        <thead class="table-dark">
            <tr>
                <th>Título</th>
                <th>Autor</th>
                <th>ISBN</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Autor</td>
                    <td>@item.Isbn</td>
                    <td>
                        <a href="/Libros/Edit/@item.Id" class="btn btn-warning btn-sm btn-editar">Editar</a>
                        <a href="/Libros/Delete/@item.Id" class="btn btn-danger btn-sm btn-eliminar">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No hay libros registrados. ¡Agrega uno!
        </div>
    }

</body>
</html>